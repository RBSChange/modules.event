			<drops>
				<drop model="modules_event/categoryfolder" action="move" />
				<drop model="modules_event/category" action="move" />
			</drops>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<groupactions name="createCategoryfolder_">
